<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>MaServlet</servlet-name>
		<servlet-class>dta.MaServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PizzaServletWebApi</servlet-name>
		<servlet-class>web.PizzaServletWebApi</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ListerPizzaController</servlet-name>
		<servlet-class>web.ListerPizzaController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeletePizzaController</servlet-name>
		<servlet-class>web.DeletePizzaController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditPizzaController</servlet-name>
		<servlet-class>web.EditPizzaController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>MaServlet</servlet-name>
		<url-pattern>/maservlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PizzaServletWebApi</servlet-name>
		<url-pattern>/api/servlet/pizzas</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListerPizzaController</servlet-name>
		<url-pattern>/pizzas/list</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeletePizzaController</servlet-name>
		<url-pattern>/pizzas/delete</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditPizzaController</servlet-name>
		<url-pattern>/pizzas/edit</url-pattern>
	</servlet-mapping>

</web-app>
