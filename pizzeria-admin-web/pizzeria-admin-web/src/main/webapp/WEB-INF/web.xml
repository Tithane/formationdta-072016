<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<filter>
		<filter-name>VerifyLoginFilter</filter-name>
		<filter-class>web.filters.VerifyLoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>VerifyLoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<listener>
		<listener-class>web.listeners.SessionListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>MaServlet</servlet-name>
		<servlet-class>dta.MaServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PizzaServletWebApi</servlet-name>
		<servlet-class>web.PizzaServletWebApi</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ListerPizzaController</servlet-name>
		<servlet-class>web.pizza.ListerPizzaController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeletePizzaController</servlet-name>
		<servlet-class>web.pizza.DeletePizzaController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditPizzaController</servlet-name>
		<servlet-class>web.pizza.EditPizzaController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UploadFile</servlet-name>
		<servlet-class>web.tools.UploadFile</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AuthentificationServlet</servlet-name>
		<servlet-class>web.general.AuthentificationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogOutServlet</servlet-name>
		<servlet-class>web.general.LogOutServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>MaServlet</servlet-name>
		<url-pattern>/maservlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PizzaServletWebApi</servlet-name>
		<url-pattern>/api/servlet/pizzas</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListerPizzaController</servlet-name>
		<url-pattern>/pizzas/list</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeletePizzaController</servlet-name>
		<url-pattern>/pizzas/delete</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditPizzaController</servlet-name>
		<url-pattern>/pizzas/edit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UploadFile</servlet-name>
		<url-pattern>/ajaxUpload</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AuthentificationServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogOutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

</web-app>
